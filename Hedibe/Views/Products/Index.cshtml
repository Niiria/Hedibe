@model IEnumerable<Hedibe.Entities.Product>
@{
    ViewData["Title"] = "Products";

    Pager pager = new Pager();
    int pageNumber = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNumber = pager.CurrentPage;
    }
}
<section>
    <div class="d-flex justify-content-between px-4 pt-2">
        <h1 class="font-dancing-script m-0">- @ViewData["Title"] -</h1>
        <h2 class="m-0">🍒🍎🍓🥬🥦</h2>
    </div>
    <div class="d-flex justify-content-between px-4">
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Search</button>
            </form>
            <a class="nav-link text-dark d-flex align-items-center p-0" asp-controller="Products" asp-action="Add"><span class=" mx-2 iconify" data-icon="akar-icons:circle-plus-fill"></span> Add your own products!</a>
    </div>
  <table class="table text-center">
  <thead>
      <tr>
          <th scope="col" style="width: 25%">
              @Html.DisplayNameFor(model => model.Name)
          </th>
          <th scope="col" style="width: 17%">
              @Html.DisplayNameFor(model => model.Calories)
          </th>
          <th scope="col" style="width: 17%">
              @Html.DisplayNameFor(model => model.TotalFat)
          </th>
          <th scope="col" style="width: 17%">
              @Html.DisplayNameFor(model => model.Protein)
          </th>
          <th scope="col" style="width: 17%">
              @Html.DisplayNameFor(model => model.Carbohydrate)
          </th>
          <th scope="col" style="width: 7%">
              @Html.DisplayNameFor(model => model.Verified)
          </th>
      </tr>
  </thead>
  <tbody>
      @foreach (var item in Model)
      {
      <tr>
          <td>
              @Html.DisplayFor(model => item.Name)
          </td>
          <td>
              @Html.DisplayFor(model => item.Calories)
          </td>
          <td>
              @Html.DisplayFor(model => item.TotalFat)
          </td>
          <td>
              @Html.DisplayFor(model => item.Protein)
          </td>
          <td>
              @Html.DisplayFor(model => item.Carbohydrate)
          </td>
          <td>
              @if (item.Verified == true)
              {
                  <span class="iconify text-success" data-icon="akar-icons:circle-check-fill"></span>
              }

              else
              {
                  <span class="iconify text-danger" data-icon="akar-icons:circle-x-fill"></span>
              }
          </td>
      </tr>
      }

  </tbody>
</table>
  <div>
      <partial name="_pager" model="@pager" />
  </div>
   
</section>



