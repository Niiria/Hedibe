@model IEnumerable<Hedibe.Models.Account.RegisterUserDto>
@using Hedibe.Entities
@{
    ViewData["Title"] = "EditUsers";

    Pager pager = new Pager();
    int pageNumber = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNumber = pager.CurrentPage;
    }

    ViewData["page"] = pager.CurrentPage;

    Product product = new Product();
}
<section class="row m-0 panel_background">
    <partial name="_PanelNavbar" />
    <main class="col-md-9 ms-sm-auto col-lg-10">
        <div class="pt-2">
            <div class="d-flex justify-content-between px-4">
                <form class="form-inline my-2 my-lg-0" asp-action="Search" asp-route-redirect="@ViewData["redirect"]">
                    <a class=" text-black-50 my-2 my-sm-0 mx-2" type="submit" asp-action="Search" asp-route-reset="@true" asp-route-redirect="@ViewData["redirect"]">
                        <span class="iconify" data-icon="bi:x-square-fill" data-width="32" data-height="32"></span>
                    </a>
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" value="@ViewBag.SearchString" name="SearchString">
                    <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Search</button>
                </form>
                <a class="nav-link text-dark d-flex align-items-center p-0" asp-controller="Account" asp-action="Register"><span class=" mx-2 iconify" data-icon="akar-icons:circle-plus-fill"></span> Register new user!</a>
            </div>
            <div class="table-responsive">
                <table class="table text-center">
                    <thead>
                        <tr>
                            </th>
                            <th class="p-1" scope="col" style="width: 17%">
                                <p class="font-dancing-script font-size-md text-dark m-0">Username</p>
                            </th>
                            <th class="p-1" scope="col" style="width: 17%">
                                <p class="font-dancing-script font-size-md text-dark m-0">Password</p>
                            </th>
                            <th class="p-1" scope="col" style="width: 17%">
                                <p class="font-dancing-script font-size-md text-dark m-0">Confirm Password</p>
                            </th>
                            <th class="p-1" scope="col" style="width: 22%">
                                <p class="font-dancing-script font-size-md text-dark m-0">Email</p>
                            </th>
                            <th class="p-1" scope="col" style="width: 17%">
                                <p class="font-dancing-script font-size-md text-dark m-0">Role</p>
                            </th>
                            <th class="p-1" scope="col" style="width: 5%">
                                <p class="font-dancing-script font-size-md text-dark m-0">Save</p>
                            </th>
                            <th class="p-1" scope="col" style="width: 5%">
                                <p class="font-dancing-script font-size-md text-dark m-0">Delete</p>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <partial name="_EditUser" model="@item" view-data="ViewData" />
                        }

                    </tbody>
                </table>
            </div>
            <div>
                <partial name="_pager" model="@pager" view-data="ViewData" />
            </div>
        </div>

    </main>
</section>




