@model Hedibe.Models.Pager

<div class="container">
    @if (Model.TotalPages > 0)
    {
    <ul class="pagination justify-content-center flex-wrap">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link text-dark" asp-controller="Panel" asp-action="@ViewData["redirect"]" asp-route-page="1">First</a>
            </li>
            <li class="page-item">
                <a class="page-link text-dark" asp-controller="Panel" asp-action="@ViewData["redirect"]" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }


        @* @for (var pge = Model.CurrentPage <= 2 ? Model.StartPage : Model.CurrentPage - 2;
        (pge <= (Model.CurrentPage >= 3 ? Model.CurrentPage + 2 : 5 )
        && pge <= (Model.TotalPages -2 <= Model.CurrentPage ? Model.CurrentPage + 2 : 5));
        pge++)*@

        @* @for (var pge = (Model.CurrentPage <= 2 ? Model.StartPage : (Model.CurrentPage >= Model.TotalPages - 2 ? 6 : Model.CurrentPage - 2));
        pge <= (Model.CurrentPage >= 3 ? (Model.CurrentPage >= Model.TotalPages - 2 ? Model.TotalPages : Model.CurrentPage + 2) : 5);
        pge++)*@
        @for (var pge = Model.StartPage;
        pge <= Model.TotalPages;
        pge++)
        {
        <li class="page-item" )>
            <a class="page-link text-dark @(pge == Model.CurrentPage ? "active-page-btn": "")" asp-controller="Panel" asp-action="@ViewData["redirect"]" asp-route-page="@pge">@pge</a>
        </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link text-dark" asp-controller="Panel" asp-action="@ViewData["redirect"]" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
            </li>
            <li class="page-item">
                <a class="page-link text-dark" asp-controller="Panel" asp-action="@ViewData["redirect"]" asp-route-page="@(Model.TotalPages)">Last</a>
            </li>
        }
    </ul>
    }
</div>