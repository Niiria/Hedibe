@model Hedibe.Models.Account.LoginUserDto

@{
    ViewData["Title"] = "Login";
}


<section class="login-background-cherries flex-grow-1">

    <div class="container mt-4">
      
        <div class="row w-100 m-0">
            <div class="col-md-4 col-12">
                <h1 class="font-dancing-script font-size-lg text-center border-bottom border-dark py-2">Login</h1>
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Username" class="control-label font-dancing-script font-size-md">Username:</label>
                        <input asp-for="Username" class="form-control" value="admin" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label font-dancing-script font-size-md">Password:</label>
                        <input asp-for="Password" class="form-control" value="admin" />
                        @*value="@Model?.Password"*@
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>


                    <div class="form-group justify-content-center d-flex">
                        <input type="submit" value="Login" class="btn btn-dark " style="width: 100px" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    
   
</section>


